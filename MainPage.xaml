<common:LayoutAwarePage
    x:Class="Memento.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Memento"
    xmlns:common="using:Memento.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <AppBar x:Name="BottomAppBar1" Padding="10,0,10,0" AutomationProperties.Name="Bottom App Bar" Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>
    
    <Grid x:Name="LayoutRoot" Background="Black">
        
        <Grid HorizontalAlignment="Right" Width="1366">
            <Button x:Name="discardBtn" Content="Discard video" HorizontalAlignment="Left" Margin="333,582,0,0" VerticalAlignment="Top" Width="179"/>
            <Button x:Name="CaptureButton" Content="Capture Video" Margin="0,620,854,110" Click="CaptureVideo_Click" HorizontalAlignment="Right" Width="179"/>
            <Button x:Name="sendBtn" Content="Send video" HorizontalAlignment="Left" Margin="333,544,0,0" VerticalAlignment="Top" Width="179" Click="sendBtn_Click"/>
            <AppBar>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal"/>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal"/>
                </Grid>
            </AppBar>
        </Grid>


        <Grid x:Name="Output" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1">
            <MediaElement x:Name="CapturedVideo" HorizontalAlignment="Left" AutoPlay="True" MaxWidth="392"/>
        </Grid>
    </Grid>
</common:LayoutAwarePage>